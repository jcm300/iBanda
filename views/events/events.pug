extends ../layout2

block scripts
    script(src="/javascripts/events.js")

block header
    h1 Agenda
    table
        tr
            td(style="width:60%")
                div(class="w3-bar w3-grey w3-large")
                    a(href=url + "events/event" class="w3-button w3-grey w3-bar-item") New Event
                    a(href=url + "events/export" class="w3-button w3-grey w3-bar-item") Export Agenda 
                    a(href= url + "main" class="w3-button w3-grey w3-bar-item") Back to Main Menu
            td
                form.w3-container.w3-xlarge.w3-grey
                    label.w3-large Choose a day to filter Events:  
                    input.w3-input-border(id="date" type="date")

block body
    ul.w3-ul.w3-large(id="eventsDay")
        div(id="l")
    br