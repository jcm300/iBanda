extends ../layout2

block scripts
    script(src="/javascripts/entry.js")

block header
    h3 Update Event
    div(class="w3-bar w3-grey w3-large")
        a(href= url + "entries/" + entry._id class="w3-button w3-grey w3-bar-item") Back to Entry
        a(href= url + "entries" class="w3-button w3-grey w3-bar-item") Back to Support Library Menu
        a(href= url + "main" class="w3-button w3-grey w3-bar-item") Back to Main Menu

block body
    form.w3-container(id="formUpdate")
        input(id="entry_id" type="hidden" name="_id" value=entry._id)
        br
        label PDF: (If only want to update description don't select a PDF)
        input.w3-input(id="file" type="file", name="file" accept="application/pdf,.pdf") 
        input.w3-input(id="desc" type="text" name="desc" placeholder="Description" value=entry.desc required)
        br
        input.w3-btn.w3-grey(id="upButton" type="submit" value="Update")
    br