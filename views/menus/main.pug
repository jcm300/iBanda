extends ../layout2

block header
    if userType=="1"
        h1 Admin Area
        div(class="w3-bar w3-grey w3-large")
            a(href="" class="w3-bar-item w3-button") Pieces Management
            a(href="" class="w3-bar-item w3-button") Users Management
            a(href=url + "articles" class="w3-bar-item w3-button") News Management
            a(href=url + "events" class="w3-bar-item w3-button") Agenda Management
            a(href="" class="w3-bar-item w3-button") Statistics
            a(href="" class="w3-bar-item w3-button") Logout
    else
        if userType=="2"
            h1 Producer Area
            div(class="w3-bar w3-grey w3-large")
                a(href="" class="w3-bar-item w3-button") Pieces
                a(href="" class="w3-bar-item w3-button") SIP Ingestion
                a(href="" class="w3-bar-item w3-button") News
                a(href="" class="w3-bar-item w3-button") Agenda
                a(href="" class="w3-bar-item w3-button") Logout
        else 
            if userType=="3"
                    h1 Consumer Area
                    div(class="w3-bar w3-grey w3-large")
                        a(href="" class="w3-bar-item w3-button") Pieces
                        a(href="" class="w3-bar-item w3-button") News
                        a(href="" class="w3-bar-item w3-button") Agenda
                        a(href="" class="w3-bar-item w3-button") Logout

block body
    h2 News
    ul.w3-ul.w3-large.w3-hoverable
        for a in articles
            li 
                p
                    b Title: 
                    a(href= url + "articles/" + a._id) #{a.title}
                p
                    b Subtitle: 
                    if a.subtitle 
                        | #{a.subtitle}
                    else
                        | ---
                p
                    b Date: 
                    | #{a.date}
                p
                    b Authors: 
                    if a.authors[0]
                        - for(var i=0; i<a.authors.length-1; i++)
                            a(href=url + "articles/authors/" + a.authors[i]) #{a.authors[i]}
                            | , 
                        a(href=url + "articles/authors/" + a.authors[a.authors.length-1]) #{a.authors[a.authors.length-1]} 
                    else
                        | ---
                p(style="white-space:pre") #{a.body}
                p
                    b Topics: 
                    if a.topics[0]
                        - for(var i=0; i<a.topics.length-1; i++)
                            a(href=url + "articles/topics/" + a.topics[i]) #{a.topics[i]}
                            | , 
                        a(href=url + "articles/topics/" + a.topics[a.topics.length-1]) #{a.topics[a.topics.length-1]}
                    else
                        | ---