extends ../layout2

block scripts
    script(src="/javascripts/inst.js")

block header
    h1 Update Instrument
    div(class="w3-bar w3-grey w3-large")
        a(href= url + "pieces/" + idP class="w3-button w3-grey w3-bar-item") Back to Piece
        a(href= url + "pieces" class="w3-button w3-grey w3-bar-item") Back to Pieces Menu
        a(href= url + "main" class="w3-button w3-grey w3-bar-item") Back to Main Menu

block body
    if error!=""
        center
            div(class="w3-panel w3-red")
                h3= error
    input(id="piece_id" type="hidden" value=idP)
    input(id="inst_id" type="hidden" value=inst._id)
    input(id="path" type="hidden" value=inst.score.path)
    form.w3-container
        br
        input.w3-input(type="text" name="name" id="name" placeholder="Name" value=inst.name required)
        input.w3-input(type="text" name="score.voice" id="voice" placeholder="Voice" value=inst.score.voice)
        input.w3-input(type="text" name="score.clave" id="clave" placeholder="Clave" value=inst.score.clave)
        input.w3-input(type="text" name="score.tune" id="tune" placeholder="Tune" value=inst.score.tune)
        label PDF:
        input.w3-input(type="file", name="file" id="file" accept="application/pdf,.pdf" required) 
        br
        input.w3-btn.w3-grey(id="upButton" type="submit" value="Update Instrument")
    br